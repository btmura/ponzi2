{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Set "ponzi2.token" in your workspace settings.
            "command": "go generate ./... ; if ($?) { go build -v -x ./cmd/ponzi2 }; if ($?) { ./ponzi2.exe ${config:ponzi2.flags} }",
            "linux": {
                "command": "go generate ./... && go build -v -x ./cmd/ponzi2 && ./ponzi2 =${config:ponzi2.flags}"
            },
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {"PZDEBUG": "chart"},
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "clean install",
            "type": "shell",
            "command": "go clean -i -x; if ($?) { go install -ldflags='-H=windowsgui' }",
            "linux": {
                "command": "go clean -i -x && go install"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}